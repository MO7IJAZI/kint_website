// Prisma schema for KINT (Kafri International) Website
// Database: MariaDB/MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Admin User Model
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin") // admin, super_admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

// Category Model
model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?   @db.Text
  image       String?
  icon        String?   // Added as per plan
  parentId    String?
  parent      Category? @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: SetNull)
  children    Category[] @relation("CategoryToCategory")
  products    Product[]
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([parentId])
  @@map("categories")
}

// Product Model
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  sku         String?  @unique // Added as per plan
  description String?  @db.Text
  shortDesc   String?  @db.Text
  features    String?  @db.Text
  benefits    String?  @db.Text
  usage       String?  @db.Text
  composition String?  @db.Text
  usageTable  Json?    // Added as per plan (Dosage/Stage)
  compTable   Json?    // Added as per plan (Nutrients)
  image       String?
  images      ProductImage[]
  downloads   Download[]     // Added as per plan
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  isOrganic   Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  metaTitle   String?
  metaDesc    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  crops       Crop[]   @relation("CropRecommendedProducts")

  @@index([slug])
  @@index([categoryId])
  @@index([isFeatured])
  @@map("products")
}

// Product Images Model
model ProductImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  order     Int      @default(0)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([productId])
  @@map("product_images")
}

// Download Model (Labels, SDS, Brochures)
model Download {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  type      String   // SDS, Label, Brochure
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([productId])
  @@map("downloads")
}

// Headquarter Model
model Headquarter {
  id          String   @id @default(cuid())
  title       String   @default("Company Headquarter")
  content     String?  @db.Text
  address     String?
  latitude    Float?
  longitude   Float?
  updatedAt   DateTime @updatedAt
  
  @@map("headquarters")
}

// Crop Model
model Crop {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  image             String?
  pdfUrl            String?
  description       String?     @db.Text
  stages      CropStage[]
  isActive          Boolean     @default(true)
  metaTitle         String?
  recommendedProducts Product[]  @relation("CropRecommendedProducts")
  createdAt         DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@map("crops")
}

// Crop Stage Model
model CropStage {
  id             String   @id @default(cuid())
  name           String
  order          Int      @default(0)
  cropId         String
  crop           Crop     @relation(fields: [cropId], references: [id], onDelete: Cascade)
  recommendation Json?    // Recommended products for this stage
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([cropId])
  @@map("crop_stages")
}

// Blog Post Model
model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?  @db.Text
  content     String   @db.LongText
  image       String?
  author      String
  tags        String?  @db.Text // JSON array stored as text
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  metaTitle   String?
  metaDesc    String?  @db.Text
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([isPublished])
  @@index([publishedAt])
  @@map("blog_posts")
}

// Static Page Model
model Page {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.LongText
  template  String   @default("default")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@map("pages")
}

// Contact Form Submissions
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String?
  department String? // Added as per plan
  message   String   @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([isRead])
  @@index([createdAt])
  @@map("contact_submissions")
}

// Settings Model for site-wide configurations
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  updatedAt DateTime @updatedAt

  @@map("settings")
}

// Experts' Forum Article Model
model ExpertArticle {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?  @db.Text
  content     String   @db.LongText
  image       String?
  category    String   // arable, fruit, vegetable
  order       Int      @default(0)
  isPublished Boolean  @default(true)
  publishedAt DateTime?
  metaTitle   String?
  metaDesc    String?  @db.Text
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([category])
  @@index([isPublished])
  @@index([order])
  @@map("expert_articles")
}

// Job Offer Model
model JobOffer {
  id            String   @id @default(cuid())
  title         String
  location      String?
  workType      String?
  contractType  String?
  employmentType String?
  companyIntro  String?  @db.Text
  responsibilities String? @db.Text
  benefits      String?  @db.Text
  qualifications String? @db.Text
  isActive      Boolean  @default(true)
  publishedAt   DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  applications  JobApplication[]

  @@index([isActive])
  @@index([publishedAt])
  @@map("job_offers")
}

// Job Application Model
model JobApplication {
  id            String   @id @default(cuid())
  jobOfferId    String
  jobOffer      JobOffer @relation(fields: [jobOfferId], references: [id], onDelete: Cascade)
  firstName     String
  lastName      String
  email         String
  phone         String?
  address       String?  @db.Text
  linkedIn      String?
  cvUrl         String?  @db.Text
  coverLetter   String?  @db.Text
  status        String   @default("pending") // pending, reviewed, contacted, rejected, hired
  notes         String?  @db.Text
  submittedAt   DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([jobOfferId])
  @@index([status])
  @@index([submittedAt])
  @@map("job_applications")
}

// Certificate Model for Gallery Images
model Certificate {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  imageUrl    String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
  @@index([isActive])
  @@map("certificates")
}

// Award Model for Gallery Images
model Award {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  imageUrl    String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
  @@index([isActive])
  @@map("awards")
}
